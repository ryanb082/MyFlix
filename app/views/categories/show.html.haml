%section.genre
  %header.clearfix
    %h1
      = @category.name
    .genre_sorting
    Sort by:
    %select
      (name="")
      %option Title: A - Z
      %option  Title: Z - A
      %option  Rating
    %article.row
      - @category.videos.each do |video|
        .video.col-md-2
          = link_to video, nil do
            = image_tag video.small_cover_url
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %form
        %fieldset
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .col-sm-8
                %p= review.content
